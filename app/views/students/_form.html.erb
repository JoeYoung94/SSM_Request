<%= render "shared/errors", obj: @student %>

<%= form_with(model: student, local: true) do |form| %>



  <div class="field">
    <%= form.label :student_name %>
    <%= form.text_field :student_name %>
  </div>

  <div class="field">
    <%= form.label :school_id, "Select School the student attends" %><br />
    <%= form.collection_select(:school_id, School.order(:school_name), :id, :school_name, {include_blank: true})  %>
  </div>

  <div class="field">
    <%= form.label :course_ids, "Select Courses" %><br>
    <%= form.collection_select(:course_ids, Course.all.where(school_id: :school_id), :id, :course_code, {include_blank: true}, {:multiple => true}) %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
